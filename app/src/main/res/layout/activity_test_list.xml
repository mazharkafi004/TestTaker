<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestListActivity"
    android:orientation="vertical"
    android:background="@drawable/ic_launcher_background"
    android:padding="20dp">


    <TextView
        android:id="@+id/txtlist"
        android:layout_width="181dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/denk_one"


        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-15dp"
        android:text="Test list"
        android:textAlignment="center"
        android:textSize="40sp" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/srcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"


        android:layout_marginTop="75dp"
        android:layout_marginEnd="23dp"


        android:layout_toStartOf="@+id/btnadd"
        android:background="@drawable/round_cornered"
        android:layoutDirection="rtl" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"


        android:layout_marginEnd="23dp"

        android:background="@drawable/round_cornered"
        android:drawableTop="@drawable/ic_add_black_24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtlist"

        android:layout_marginTop="104dp"
        android:layout_marginBottom="20dp" />


</RelativeLayout>