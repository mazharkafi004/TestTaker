
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"




    android:padding="50dp"
    android:background="@drawable/ic_launcher_background"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher_background"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/txtmakeques"
            android:text="Question: "

            android:textColor="@color/white"
            android:fontFamily="@font/denk_one"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            />
        <EditText
            android:id="@+id/eN5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:background="@drawable/round_cornered"

            android:fontFamily="@font/denk_one"
            android:hint="   Enter the Question                                   "

            android:inputType="textShortMessage"
            android:layout_below="@id/txtmakeques" />
        <TextView
            android:id="@+id/eN6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"







            android:layout_below="@id/eN5" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/option"
            android:layout_below="@id/eN6"
            >

            <RadioButton
                android:id="@+id/opt1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                 />


            <EditText
                android:id="@+id/eN1"

                android:layout_height="wrap_content"


                android:background="@drawable/round_cornered"

                android:fontFamily="@font/denk_one"
                android:hint="    Enter an option"
                android:layout_width="250dp"

                android:inputType="textShortMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:id="@+id/opt2"
                />
            <EditText
                android:id="@+id/eN2"

                android:layout_height="wrap_content"


                android:background="@drawable/round_cornered"

                android:fontFamily="@font/denk_one"
                android:hint="    Enter an option"
                android:layout_width="250dp"

                android:inputType="textShortMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:id="@+id/opt3"
                />
            <EditText
                android:id="@+id/eN3"

                android:layout_height="wrap_content"


                android:background="@drawable/round_cornered"

                android:fontFamily="@font/denk_one"
                android:hint="    Enter an option"
                android:layout_width="250dp"

                android:inputType="textShortMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <RadioButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:id="@+id/opt4"
                />
            <EditText
                android:id="@+id/eN4"

                android:layout_height="wrap_content"


                android:background="@drawable/round_cornered"

                android:fontFamily="@font/denk_one"
                android:hint="
                Enter an option"
                android:layout_width="250dp"

                android:inputType="textShortMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RadioGroup>

            <Button
                android:id="@+id/enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/option"

                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
              
                android:background="@drawable/cornered_red"

                android:fontFamily="@font/denk_one"

                android:padding="14dp"

                android:text="Add"
                android:textColor="@color/white"
                 />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="614dp"

            android:layout_alignTop="@+id/txtmakeques"
            android:layout_marginTop="2dp">


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>