


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background"
    tools:context=".MainMenu">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="140dp"
        android:layout_height="125dp"

        android:contentDescription="logo"


        android:src="@drawable/icon"
        android:transitionName="image"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <Button
        android:id="@+id/testlist"
        android:layout_width="227dp"
        android:layout_height="50dp"
        android:layout_marginTop="228dp"

        android:background="@drawable/round_cornered"
        android:ems="10"
        android:fontFamily="@font/denk_one"
        android:hint="Test List"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColorHint="@color/login_form_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stats"
        android:layout_width="227dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"

        android:background="@drawable/round_cornered"
        android:ems="10"
        android:fontFamily="@font/denk_one"
        android:hint=" Stats "

        android:padding="16dp"
        android:textColorHint="@color/login_form_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testlist" />


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="227dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"

        android:background="@drawable/round_cornered"
        android:ems="10"
        android:fontFamily="@font/denk_one"
        android:hint=" Logout"

        android:padding="16dp"
        android:textColorHint="@color/login_form_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="135dp"
        android:layout_height="47dp"
        android:layout_marginTop="124dp"

        android:background="@drawable/cornerd_pink"
        android:drawableEnd="@drawable/ic_person_black_24dp"
        android:text="Profile"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias=".97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogout" />
</androidx.constraintlayout.widget.ConstraintLayout>