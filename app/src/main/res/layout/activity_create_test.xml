
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTest"
    android:padding="10dp"
    android:background="@drawable/ic_launcher_background">


    android:layout_width="match_parent"
    android:layout_height="match_parent"

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/txttest"
        android:text="Test Name: "
        android:textFontWeight="20"
        android:fontFamily="@font/denk_one"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/eN5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@id/txttest"
        android:layout_marginTop="0dp"

        android:background="@drawable/round_cornered"
        android:fontFamily="@font/denk_one"

        android:hint="     Enter the Test Name   "
        android:inputType="textShortMessage"
        android:padding="15px" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eN5"
        android:layout_toRightOf="@id/mid"
        android:background="@drawable/corneredblue"
        android:drawableEnd="@drawable/ic_add_circle_outline_black_24dp"
        android:fontFamily="@font/denk_one"
        android:text="Add question"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview"
        android:layout_width="236dp"
        android:layout_height="288dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="211dp" />

    <Button
        android:id="@+id/btnfinish"
        android:layout_width="173dp"
        android:layout_height="77dp"


        android:layout_alignEnd="@id/btnadd"


        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="214dp"
        android:layout_marginEnd="-35dp"
        android:layout_marginBottom="115dp"

        android:background="@drawable/cornerd_pink"
        android:drawableEnd="@drawable/ic_check_box_black_24dp"
        android:padding="16dp"
        android:text="Finish"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/mid"
        android:layout_below="@id/eN5"

        />
    <Button
        android:id="@+id/btnqueslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eN5"
        android:layout_toLeftOf="@+id/mid"
        android:background="@drawable/corneredblue"
        android:drawableEnd="@drawable/ic_list_black_24dp"
        android:layout_margin="12dp"
        android:fontFamily="@font/denk_one"

        android:text="Question list"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/timeset"
        android:layout_width="200dp"
        android:layout_height="wrap_content"


        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="26dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="55dp"
        android:layout_toEndOf="@+id/eN5"
        android:background="@drawable/round_cornered"
        android:fontFamily="@font/denk_one"
        android:hint="  Time(sec)     "
        android:inputType="number"
        android:padding="15px" />

</RelativeLayout>
